<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>komiku</title>
    <%- include("partials/header") -%>
  </head>
  <body>
    <%- include("partials/nav") -%>
    <div class="container py-2">
      <section id="home" class="row gap-2">
        <div class="col-lg-8">
          <div class="row">
            <h1 class="fs-4 text-capitalize">
              comics
            </h1>
            <% for(let i = 0; i < comics.length; i++) {%>
            <% let komik = comics[i] %>
            <div class="col-6 col-md-4 col-lg-3">
              <div class="d-flex gap-2 flex-column popular komik mx-1 mb-1 shadow-sm px-3 py-2 align-items-center position-relative">
                  <img class="img-fluid thumbnail" style="height:100%" src="/thumb/?url=<%= komik.thumb %>"  alt="thumbnail" />
                  <div class="d-flex flex-column">
                    <h1 class="title position-absolute px-2 text-center label shadow-sm" style="background: var(--blue);left:0;top:0">
                      <a href="<%= typeof type !== "undefined" ? `/type/${type}` : "#" %>"><%= typeof type !== "undefined" ? type : "komik" %></a>
                    </h1>
                    <h1 class="title text-center py-2" style="max-height: 100%;">
                      <a href="/detail/<%= komik.link.endpoint %>">
                      <%= komik.name %>
                    </a>
                  </h1>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </section>
      <%- include("partials/footer") -%>
    </div>
    <%- include("partials/script") -%>
  </body>
</html>