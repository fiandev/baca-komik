<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>komiku</title>
    <%- include("partials/header") -%>
  </head>
  <body>
    <%- include("partials/nav") -%>
    <div class="container py-2">
      <section id="read" class="row gap-3">
        <div class="col-lg-8">
          <div class="read shadow d-flex flex-column align-items-center px-2 py-1">
            <h1 class="title fs-4"><%= comic.title %></h1>
            <div class="w-100 list-images d-flex flex-column gap-2 overflow-scroll">
              <% for(let i = 0; i < comic.images.length; i++) { %>
              <% let ch = comic.images[i] %>
                <img class="img-fluid" src="/thumb?url=<%= ch %>" alt="<%= comic.title %>" />
              <% } %>
            </div>
            <div class="paginate-chapter my-2 d-flex justify-content-center gap-1">
              <% if(comic.chapter.prev != null) {%>
              <a href="/read/<%= comic.chapter.prev %>">
                <p class="px-3 py-2 d-flex justify-content-center align-items-center gap-1">
                  <i class="fa fa-arrow-left"></i>
                  previous
                </p>
              </a>
              <% } %>
              <% if(comic.chapter.next != null) {%>
              <a href="/read/<%= comic.chapter.next %>">
                <p class="px-3 py-2 d-flex justify-content-center align-items-center gap-1">
                  next
                  <i class="fa fa-arrow-right"></i>
                </p>
              </a>
              <% } %>
            </div>
          </div>
        </div>
      </section>
      <%- include("partials/footer") -%>
    </div>

  </body>
</html>